<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>Eat-Da-Burger</h1>
        </div>
    </div>

    <div class="row">
        <div class="col-5">
            {{#each burgers}}
            {{#unless this.devoured}}
            <p>{{this.id}} - {{this.burger_name}}</p>
            <div class="row">
                <div class="col-2">
                    <form class="devourButton button-size">
                        <input input type="hidden" class="burgerId" type="text" value={{this.id}}><br>
                        <button type="submit" class="btn btn-default">Devour it!</button>
                    </form>
                </div>
            </div>
            {{/unless}}
            {{/each}}
        </div>
        <div class="col-5">
            {{#each burgers}}
            {{#if this.devoured}}
            <p>{{this.id}} - {{this.burger_name}}</p>
            {{/if}}
            {{/each}}
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <form id="burgerForm">
                <div class="form-group">
                    <label for="burgerName">Name of Burger:</label>
                    <input type="text" id="burgerName" name="burger_name">
                </div>
                <button type="submit" id="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>