<div class="container">
    <div class="row">
        <div class="col-12">
            <h1>Eat-Da-Burger</h1>
        </div>
        <div class="col-6">
            <div class="row" class="burgerStructure">
                {{#each burgers}}
                {{#unless this.devoured}}
                <div class="col-9">
                    <p>{{this.id}} - {{this.burger_name}}</p>
                </div>
                <div class="col-3">
                    <form class="devourButton button-size">
                        <input input type="hidden" class="change-devour" type="text" value={{this.id}}><br>
                        <button type="submit" type="button" class="btn btn-dark">Devour it!</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
        <div class="col-6">
            {{#each burgers}}
            {{#if this.devoured}}
            <p>{{this.id}} - {{this.burger_name}}</p>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-12">
            <form id="burgerForm">
                <div class="form-group">
                    <label for="burgerName">Name of Burger:</label>
                    <input type="text" id="burgerName" name="burger_name">
                </div>
                <button type="submit" type="button" class="btn btn-dark" id="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>