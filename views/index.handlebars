<h1> Burgers</h1>
<ul>
    {{#each burgers}}
        {{#unless devoured}}
            {{>burgers/burger-block devoured=true}}
        {{/unless}}
    {{/each}}
</ul>

<ul>
    {{#each burgers}}
        {{#if devoured}}
            {{>burgers/burger-block devoured=false}}
        {{/if}}
    {{/each}}
</ul>
<form id="burgerForm">
    <div class="form-group">
        <label for="burgerName">Name of Burger:</label>
        <input type="text" id="burgerName" name="burger_name">
    </div>
    <button type="submit" id="submit">Add Burger</button>
</form>